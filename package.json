{
  "name": "rxjs-server",
  "version": "1.0.0",
  "description": "An node http server wrapped with RxJS.",
  "main": "index.js",
  "scripts": {
    "start": "node app/index.js",
    "watch:start": "nodemon -x 'npm start'",
    "test": "tap app/**/**/*.test.js --reporter=spec",
    "watch:test": "nodemon -x 'npm test'",
    "wt": "npm run watch:test",
    "watch:unit-test": "nodemon -x 'tap app/server/handle-connect-factory.test.js --reporter=spec'",
    "wut": "npm run watch:unit-test",
    "lint": "eslint -c .eslintrc.js .",
    "docker:build": "docker build -t marcusnielsen/rxjs-server .",
    "docker:run": "docker run -p 3000:8080 -d --env-file .docker-env marcusnielsen/rxjs-server"
  },
  "author": "Marcus Nielsen <marcus.nielsen82@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "eslint": "^2.0.0",
    "nodemon": "^1.8.1",
    "rx": "^4.0.7",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5",
    "tap": "^5.4.4"
  }
}
